@ECHO ON

IF "%ARCH%"=="32" (
    SET PLATFORM=x86
) ELSE (
    SET PLATFORM=x86_64
)

scons APR="%LIBRARY_PREFIX%" ^
      APU="%LIBRARY_PREFIX%" ^
      OPENSSL="%LIBRARY_PREFIX%" ^
      ZLIB="%LIBRARY_PREFIX%" ^
      LIBDIR="%LIBRARY_PREFIX%" ^
      MSVC_VERSION=%VS_VERSION% ^
      TARGET_ARCH=%PLATFORM% ^
      PREFIX="%PREFIX%" ^
      SOURCE_LAYOUT="False"
IF ERRORLEVEL 1 EXIT 1

scons install
IF ERRORLEVEL 1 EXIT 1
